{% extends "include/basePage.njk" %}

{% block content %}
<div class="w-50 p-5 mx-auto">
  <br>
  <br>
  <form class="form" action = "/login" method="post">
      <h1 class="mb-5">Log In</h1>
      <div class="mb-3">
        <label class="form-label fw-bold" id="input-group-left">Email:</label>
        <input type="text" class="form-control" id="email" name="email" value="{{email}}" placeholder="Email">
      </div>
      <div class="mb-3">
        <label class="form-label fw-bold" id="input-group-left">Password:</label>
        <input type="password" class="form-control" id="password" name="password" value="{{password}}" placeholder="Password">
      </div>

      {% if errormessage %}
      <div class="alert alert-danger" role="alert">
        {{errormessage}}
      </div>
      {% endif %}

      <br>
      <div class="d-grid">
        <button id="submit" type="submit" class="btn btn-primary">Log In</button>
      </div>
      <br>

      <hr>

      <p class="text-center text-secondary">Don't have an account?</p>
      <div class="d-grid">
        <a class="btn btn-outline-success" href="/register">Sign Up</a>
      </div>
  </form>
  <br>
  <br>
</div>
{% endblock %}