{% extends "include/basePage.njk" %}

{% block content %}
<div class="flex-grow-1 w-100 p-5 mx-auto bg-kainos-blue">
  <br><br>
  <h1 class="text-center mb-4 job-title text-light">Applicants For {{ role.roleName }} Role</h1>
  <br><br>
</div>
<div class="container w-75 pb-5 ps-5 pe-5 mx-auto">
  <br><br>
  <h1 class="text-center mb-4">Role Details</h1>

  <div class="table-responsive card rounded-3 p-0 m-0 fs-5">
    <table class="table table-bordered table-striped job-role-table rounded-3 border overflow-hidden p-0 m-0">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Capability</th>
          <th>Band</th>
          <th>Positions Remaning</th>
          <th>Closing Date</th>
          <th>Status</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <a href="/jobrole/{{ role.jobRoleId }}">{{ role.roleName }}</a>
          </td>
          <td>{{ role.capability.capabilityName }}</td>
          <td>{{ role.band.bandName }}</td>
          <td>{{ role.details.numberOfOpenPositions }}</td>
          <td>{{ role.closingDate | date }}</td>
          <td>{{ role.details.statusName }}</td>
          <td>
            <a href="{{ role.details.sharepointURL }}" class="btn btn-primary">SharePoint</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <br><br>
  <h1 class="text-center mb-4">Applications</h1>

  <div class="table-responsive card rounded-3 p-0 m-0 fs-5">
    <table class="table table-bordered table-striped job-role-table rounded-3 border overflow-hidden p-0 m-0">
      <thead class="thead-dark">
        <tr>
          <th>Applicant</th>
          <th>Status</th>
          <th>Date Submitted</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <a href="#">test@email.com</a>
          </td>
          <td>In Progress</td>
          <td>Fri Oct 23 2024</td>
          <td>
            <a href="#" class="btn btn-success">Hire</a>
            <a href="#" class="btn btn-danger">Reject</a>
            <a href="#" class="btn btn-primary">View CV</a>
          </td>
        </tr>

        <tr>
          <td>
            <a href="#">test2@email.com</a>
          </td>
          <td>Hired</td>
          <td>Fri Oct 23 2024</td>
          <td>
            <a href="#" class="btn btn-primary">View CV</a>
          </td>
        </tr>

        <tr>
          <td>
            <a href="#">test3@email.com</a>
          </td>
          <td>Rejected</td>
          <td>Fri Oct 23 2024</td>
          <td>
            <a href="#" class="btn btn-primary">View CV</a>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script src="/scripts/file-upload.js"></script>
{% endblock %}