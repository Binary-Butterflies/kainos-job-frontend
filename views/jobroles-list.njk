{% extends "include/basePage.njk" %}

{% block content %}
  <h1 class="text-center mb-4">Open Job Roles at Kainos</h1>

  {% if errormessage %}
    <div class="alert alert-danger">{{ errormessage }}</div>
  {% else %}
    {% if jobRoles %}
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Role Name</th>
            <th>Location</th>
            <th>Capability</th>
            <th>Band</th>
            <th>Closing Date</th>
          </tr>
        </thead>
        <tbody>
          {% for role in jobRoles | sort %}
            <tr>
              <td>
                <a href="/job-roles/{{ role.id }}">{{ role.roleName }}</a>
              </td>
              <td>{{ role.location }}</td>
              <td>{{ role.capability.capabilityName }}</td>
              <td>{{ role.band.bandName }}</td>
              <td>{{ role.closingDate | date }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <p class="text-center">No job roles available at the moment.</p>
    {% endif %}
  {% endif %}
{% endblock %}