{% extends "include/basePage.njk" %}

{% block content %}
<div class="flex-grow-1 container mx-auto p-5 mx-auto">
  <br>
  <br>
  <h1 class="text-center mb-4">Open Job Roles at Kainos</h1>
  <br>
  <br>

  {% if errormessage %}
    <div class="alert alert-danger">
      {{ errormessage }}
    </div>
  {% else %}
    {% if jobRoles %}
      <div class="table-responsive card rounded-3 p-0 m-0 fs-5">
        <table class="table table-bordered table-striped job-role-table rounded-3 border overflow-hidden p-0 m-0">
          <thead class="thead-dark">
            <tr>
              <th>Role Name</th>
              <th>Location</th>
              <th>Capability</th>
              <th>Band</th>
              <th>Closing Date</th>
            </tr>
          </thead>
          <tbody>
            {% for role in jobRoles | sort %}
              <tr>
                <td>
                  <a href="/jobrole/{{role.jobRoleId}}">{{ role.roleName }}</a>
                </td>
                <td>{{ role.location }}</td>
                <td>{{ role.capability.capabilityName }}</td>
                <td>{{ role.band.bandName }}</td>
                <td>{{ role.closingDate | date }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    {% else %}
      <p class="text-center">No job roles available at the moment.</p>
    {% endif %}
  {% endif %}
  <br>
  <br>
</div>
{% endblock %}